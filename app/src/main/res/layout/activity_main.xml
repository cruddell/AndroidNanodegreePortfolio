<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruddell.portfolio.MainActivity">


    <TextView
        android:text="Chris's Nanodegree Apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"/>

    <Button
        android:text="Popular Movies"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/popularMovies"
        android:onClick="onClick"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="48dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"/>

    <Button
        android:text="Make Your App Material"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="@+id/popularMovies"
        app:layout_constraintTop_toBottomOf="@+id/buildItBigger"
        app:layout_constraintRight_toRightOf="@+id/popularMovies"/>

    <Button
        android:text="Stock Hawk"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/stockHawk"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/popularMovies"
        app:layout_constraintRight_toRightOf="@+id/activity_main"/>

    <Button
        android:text="Build it Bigger"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/buildItBigger"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/popularMovies"
        app:layout_constraintTop_toBottomOf="@+id/stockHawk"
        app:layout_constraintRight_toRightOf="@+id/popularMovies"/>

    <Button
        android:text="Make Your App Material"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/makeAppMaterial"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/popularMovies"
        app:layout_constraintTop_toBottomOf="@+id/buildItBigger"
        app:layout_constraintRight_toRightOf="@+id/popularMovies"/>

    <Button
        android:text="Go Ubiquitous"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/ubiquitous"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/buildItBigger"
        app:layout_constraintTop_toBottomOf="@+id/makeAppMaterial"
        app:layout_constraintRight_toRightOf="@+id/buildItBigger"/>

    <Button
        android:text="Capstone"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/capstone"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="@+id/buildItBigger"
        app:layout_constraintTop_toBottomOf="@+id/ubiquitous"
        app:layout_constraintRight_toRightOf="@+id/buildItBigger"
        app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>
